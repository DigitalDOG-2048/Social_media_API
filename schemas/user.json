{
    "$schema": "http://json-schema.org/draft-07/schema",
    "definitions": {
        "user": {
            "$id": "#user",
            "title": "User",
            "description": "the information of the user",
            "type": "object",
            "properties": {
                "id": {
                    "description": "the id the user",
                    "type": "integer"
                },
                "name": {
                    "description": "the name of the user",
                    "type": "string"
                },
                "username": {
                    "description": "the username of the user",
                    "type": "string"
                },
                "email": {
                    "description": "the email of the user",
                    "type": "string",
                    "format": "email"
                },
                "role": {
                    "description": "the role of the user",
                    "type": "string"
                }
            }
        },
        "login": {
            "$id": "login",
            "title": "Login",
            "description": "the information required for login",
            "type": "object",
            "properties": {
                "username": {
                    "description": "the username of the account",
                    "type": "string"
                },
                "password": {
                    "description": "the passwor of the account",
                    "type": "string"
                }
            },
            "required": [
                "username",
                "password"
            ],
            "additionalProperties": false
        },
        "loggedin": {
            "$id": "loggedin",
            "title": "Logged in",
            "description": "the confirmation of login",
            "type": "object",
            "properties": {
                "id": {
                    "description": "the id the user been logged in",
                    "type": "integer"
                },
                "name": {
                    "description": "the name of the user been logged in",
                    "type": "string"
                },
                "username": {
                    "description": "the username of the user been logged in",
                    "type": "string"
                },
                "email": {
                    "description": "the email of the user been logged in",
                    "type": "string",
                    "format": "email"
                },
                "Login": {
                    "description": "Boolean indicator of success",
                    "type": "boolean"
                }
            }
        },
        "logout": {
            "$id": "logout",
            "title": "logout",
            "description": "the confirmation of logout",
            "type": "object",
            "properties": {
                "logout": {
                    "description": "Boolean indicator of success",
                    "type": "boolean"
                }
            }
        },
        "register": {
            "$id": "register",
            "title": "Register",
            "description": "the inforamtion required for create a new account",
            "type": "object",
            "properties": {
                "name": {
                    "description": "the name of the user",
                    "type": "string"
                },
                "email": {
                    "description": "the email of the user",
                    "type": "string",
                    "format": "email"
                },
                "username": {
                    "description": "the username of the acccount",
                    "type": "string",
                    "minLength": 4
                },
                "password": {
                    "description": "the password of the account",
                    "type": "string",
                    "minLength": 8
                }
            },
            "required": [
                "name",
                "username",
                "email",
                "password"
            ],
            "additionalProperties": false
        },

        "registered": {
            "$id": "registered",
            "title": "Registered",
            "description": "the confirmation of account created",
            "type": "object",
            "properties": {
                "id":{
                    "description": "the id of the user",
                    "type":"string"
                },

                "name": {
                    "description": "the name of the user",
                    "type": "string"
                },
                "email": {
                    "description": "the email of the user",
                    "type": "string",
                    "format": "email"
                },
                "username": {
                    "description": "the username of the acccount",
                    "type": "string",
                    "minLength": 4
                }
            }
        },
        
        "userUpdate": {
            "$id": "#userUpdate",
            "title": "User Update",
            "description": "the inforamtion required for update",
            "type": "object",
            "properties": {
                "name": {
                    "description": "the name of the user",
                    "type": "string"
                },
                "email": {
                    "description": "the email of the user",
                    "type": "string",
                    "format": "email"
                },
                "username": {
                    "description": "the username of the acccount",
                    "type": "string",
                    "minLength": 4
                },
                "password": {
                    "description": "the password of the account",
                    "type": "string",
                    "minLength": 8
                }
            },
            "additionalProperties": false
        },
        "userUpdated": {
            "$id": "#userUpdated",
            "title": "User Updated",
            "description": "Confirmation of a successful user update",
            "type": "object",
            "properties": {
                "ID": {
                    "description": "ID of user",
                    "type": "integer"
                },
                "updated": {
                    "description": "Boolean indicator of success",
                    "type": "boolean"
                }
            }
        },
        "userDeleted": {
            "$id": "#userDeleted",
            "title": "User Deleted",
            "description": "Confirmation of a successful deletion",
            "type": "object",
            "properties": {
                "ID": {
                    "description": "ID of the user",
                    "type": "integer"
                },
                "deleted": {
                    "description": "Boolean indicator of success",
                    "type": "boolean"
                }
            }
        }
    }
}